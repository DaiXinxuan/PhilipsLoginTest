<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5368ef"
    tools:context="com.dxx.loginrobotium.MainActivity">

    <LinearLayout
        android:id="@+id/fillin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/ed_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/ed_username"
                android:hint="Please enter account number"
                android:singleLine="true"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/top_et"
                android:textColor="#505050"
                android:drawableLeft="@mipmap/user1"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ed_username"
                android:background="@drawable/bottom_et"
                android:drawableLeft="@mipmap/pass1"
                android:drawablePadding="10dp"
                android:hint="Please enter the password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#505050" />

        </RelativeLayout>
        <Button
            android:id="@+id/login_button"
            android:layout_below="@+id/ed_rela"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:background="@drawable/login_btn"
            />
        <Button
            android:id="@+id/regist_button"
            android:layout_below="@+id/login_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:clickable="true"
            android:text="Registration"
            android:textSize="20sp"
            android:textColor="#009393"
            android:background="@drawable/walk_btn"/>
    </LinearLayout>
</RelativeLayout>
